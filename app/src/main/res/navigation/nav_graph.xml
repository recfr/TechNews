<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.recep.technologynews.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <argument
            android:name="argument_title"
            app:argType="string"
            android:defaultValue="title" />
        <argument
            android:name="argument_detail"
            app:argType="string"
            android:defaultValue="detail" />
        <argument
            android:name="argument_image"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.recep.technologynews.ui.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="argument_title"
            app:argType="string" />
        <argument
            android:name="argument_detail"
            app:argType="string" />
        <argument
            android:name="argument_image"
            app:argType="integer" />
    </fragment>
</navigation>